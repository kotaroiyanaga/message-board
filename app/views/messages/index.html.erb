

<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
  
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<%= form_for(@message) do |f| %>
  <font color="green"><b>名前:</b></font>
  <%= f.text_field :name %>
  
  <font color="blue"><b>内容:</b></font>
  <%= f.text_area :body %>
  <%= f.submit class: "btn btn-sm btn-success btn-lg active" %>
<% end %>