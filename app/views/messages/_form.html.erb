<%= form_for(@message) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>
<% end %>

<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
  <div class="form-group">
    <label for="message_name" class="control-label col-sm-2">名前:</label>
    <div class="col-sm-8">
      <%= f.text_field :name, :class => "form-control" %>
    </div>  
  </div>
  
  <div class="form-group">
    <label for="message_age" class="control-label col-sm-2">年齢:</label>
    <div class="col-sm-8">
      <%= f.number_field :age , :class => "form-control" ,in: 0.0..120.0, step: 1.0 %>
    </div>
  </div>

  <div class="form-group">
    <label for="message_text" class="control-label col-sm-2">内容:</label>
    <div class="col-sm-8">
      <%= f.text_area :body, :class => "form-control" %>
    </div>
  </div>
  
  <%= f.submit class: "btn btn-sm btn-primary" %>
<% end %>